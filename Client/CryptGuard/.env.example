# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# Environment
VITE_ENV=development

# Blockchain Configuration
VITE_CONTRACT_ADDRESS=0xYourContractAddressHere
VITE_NETWORK_NAME=localhost
VITE_CHAIN_ID=31337

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_LOGS=false

# ===== SECURITY FEATURES (Optional - Default: false) =====
# Must match server-side security flags in Server/.env
# Only enable after installing crypto-js: npm install crypto-js

# Prevent replay attacks - sends x-request-nonce and x-request-timestamp headers
VITE_ENABLE_REPLAY_PROTECTION=false

# Verify request signatures - sends x-request-signature header
VITE_ENABLE_REQUEST_SIGNING=false

# Validate request body integrity - sends x-content-checksum header
VITE_ENABLE_CONTENT_INTEGRITY=false

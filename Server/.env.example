# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/CryptGuard?retryWrites=true&w=majority

# Server Configuration
PORT=3000
CORS_ORIGIN=http://localhost:5173

# JWT Authentication (CRITICAL: Generate strong secrets!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRETKEY=<generate-with-crypto.randomBytes-32-bytes-hex>
JWT_REFRESH_SECRETKEY=<different-from-access-token-32-bytes-hex>

# Master Encryption Key (CRITICAL: Protects all user encryption keys!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NEVER commit this to git! Keep it secure!
MASTER_ENCRYPTION_KEY=<generate-with-crypto.randomBytes-32-bytes-hex>

# IPFS/Pinata Configuration
PINATA_JWT=your_pinata_jwt_token_here
PINATA_GATEWAY=your-gateway.mypinata.cloud

# ===== SECURITY FEATURES (Optional - Default: false) =====
# Enable these features progressively after client is updated

# Prevent replay attacks - requires x-request-nonce and x-request-timestamp headers
ENABLE_REPLAY_PROTECTION=false

# Verify request signatures - requires x-request-signature header
ENABLE_REQUEST_SIGNING=false

# Validate request body integrity - requires x-content-checksum header
ENABLE_CONTENT_INTEGRITY=false

# Nonce expiry time in milliseconds (default: 5 minutes)
NONCE_EXPIRY_MS=300000
